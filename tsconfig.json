{
  "compilerOptions": {
    "target": "ES2019",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir": "./dist",
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
